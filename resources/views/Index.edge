<script>

    var imgs=[];
    var slider;
    var imgAtual;
    var maxImg;
    var tmp;
    var Tempotroca;

    function preCarregamento() {
        var s = 1;

        for (var contador = 0; contador < 6; contador++) {
            imgs[contador]=new Image();
            imgs[contador].src="Imagens/s"+s+".jpg";
            s++;
        }
    }

    function carregarImg(img) {
        slider.style.backgroundImage = "url('"+imgs[img].src+"')";
    }

    function iniciar() {
        preCarregamento();
        imgAtual = 0;
        maxImg = imgs.length - 1;
        slider = document.getElementById("div_slider")
        carregarImg(imgAtual);
        Tempotroca = 3500;
        tmp = setInterval(trocar,Tempotroca)
    }

    function trocar() {
        imgAtual++;
        if (imgAtual > maxImg) {
            imgAtual = 0;
        }
        carregarImg(imgAtual);
    }

    window.addEventListener("load",iniciar)

    function tela() {
        telinha.style.display = 'block';
    }

    function resetela() {
        telinha.style.display = 'none';
    }

</script>